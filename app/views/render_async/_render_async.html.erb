<<%= html_element_name %>
  id="<%= container_id %>"
  class="<%= container_class %>"
>
  <%= placeholder %>
</<%= html_element_name %>>

<% content_for :render_async do %>
  <%= javascript_tag html_options do %>
    <%= render partial: 'render_async/request',
               formats: [:js],
               locals:  { container_id: container_id,
                          path: path,
                          method: method,
                          data: data,
                          event_name: event_name,
                          headers: headers } %>
  <% end %>
<% end %>
