<div id="<%= container_id %>">
  <%= block %>
</div>

<% content_for :render_async do %>
  <%= javascript_tag html_options do %>
    (function($){
      $.ajax({ url: "<%= path %>" }).always(function(response) {
        $("#<%= container_id %>").replaceWith(response);
      });
    }(jQuery));
  <% end %>
<% end %>
